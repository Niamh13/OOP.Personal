package xpath.belowwaterapp;

import javax.swing.JOptionPane;

/**
 * BelowWaterApp
 * @author niamh
 * 26/10/2023
 */

public class BelowWaterApp {
    public static void main(String[] args) {
        String company, species;
        int totalFish, waste, sold, caught, perWaste, population;
        double fuel, hour, perType, totalFuel, mFuel, mFish;
        
        Fish myFish = new Fish();
        Mackerel mack = new Mackerel();
        Whiting whit = new Whiting();
        Pollack poll = new Pollack();
        Codling cod = new Codling();
        
        company = JOptionPane.showInputDialog(null, "Enter Company Name: ");
        
        totalFish = Integer.parseInt(JOptionPane.showInputDialog(null, "Enter Total Number of Fish Caught: "));
        fuel = Double.parseDouble(JOptionPane.showInputDialog(null, "Enter Gallon per Hour Used: "));
        hour = Double.parseDouble(JOptionPane.showInputDialog(null, "Enter Time spent Fishing in Hours: "));
        
        Fish f = new Fish(totalFish, fuel, hour);
        
        population = myFish.getPopulation();
        
        for(int i = 0; i<5; i++){
            species = JOptionPane.showInputDialog(null, "Enter the fish species: ");
            
            if(species.equalsIgnoreCase("mackerel")){
                caught = Integer.parseInt(JOptionPane.showInputDialog(null, "Enter Number of Fish Caught: "));
                sold = Integer.parseInt(JOptionPane.showInputDialog(null, "Enter Number of Fish Sold: "));
                
                Mackerel m = new Mackerel(caught, sold, totalFish);
                
                mack.computeWaste();
                mack.computeType();
                
                perWaste = mack.getPerWaste();
                perType = mack.getPerFish();
                
                JOptionPane.showMessageDialog(null, "The percentage wasted is " + perWaste + " and The percentage of Fish caught are Mackerel is " + perType);
            }
            else if(species.equalsIgnoreCase("whiting")){
                caught = Integer.parseInt(JOptionPane.showInputDialog(null, "Enter Number of Fish Caught: "));
                sold = Integer.parseInt(JOptionPane.showInputDialog(null, "Enter Number of Fish Sold: "));
                
                Whiting w = new Whiting(caught, sold, totalFish);
                
                whit.computeWaste();
                whit.computeType();
                
                perWaste = whit.getPerWaste();
                perType = whit.getPerFish();
                
                JOptionPane.showMessageDialog(null, "The percentage wasted is " + perWaste + " and The percentage of Fish caught are Whiting is " + perType);                
            }
            else if(species.equalsIgnoreCase("pollack")){
                caught = Integer.parseInt(JOptionPane.showInputDialog(null, "Enter Number of Fish Caught: "));
                sold = Integer.parseInt(JOptionPane.showInputDialog(null, "Enter Number of Fish Sold: "));
                
                Pollack p = new Pollack(caught, sold, totalFish);
                
                poll.computeWaste();
                poll.computeType();
                
                perWaste = poll.getPerWaste();
                perType = poll.getPerFish();
                
                JOptionPane.showMessageDialog(null, "The percentage wasted is " + perWaste + " and The percentage of Fish caught are Pollack is " + perType);
            }
            else if(species.equalsIgnoreCase("codling")){
                caught = Integer.parseInt(JOptionPane.showInputDialog(null, "Enter Number of Fish Caught: "));
                sold = Integer.parseInt(JOptionPane.showInputDialog(null, "Enter Number of Fish Sold: "));
                
                Codling c = new Codling(caught, sold, totalFish);
                
                cod.computeWaste();
                cod.computeType();
                
                perWaste = cod.getPerWaste();
                perType = cod.getPerFish();
                
                JOptionPane.showMessageDialog(null, "The percentage wasted is " + perWaste + " and The percentage of Fish caught are Codling is " + perType);
            }
            else{
                JOptionPane.showMessageDialog(null, "Invaild Fish species, Please try again.");
                i=i-1;
            }
        }
        
        JOptionPane.showMessageDialog(null, "The set population in total is now " + population);
        
    }
}
