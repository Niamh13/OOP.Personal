package xpath.belowwaterapp;

/**
 *
 * @author niamh
 */
public class Mackerel extends Fish {
    //variables
    private int waste, sold, caught, perWaste;
    private double perType;
    
    //constructor
    public Mackerel(){
        waste = 0;
        sold = 0;
        caught = 0;
        perWaste = 0;
        perType = 0.0;
    }

    //overloaded method
    public Mackerel(int sold, int caught, int totalFish) {
        super(totalFish);
        this.sold = sold;
        this.caught = caught;
    }
    
    //compute method
    @Override
    public void compute(){
        
        //calculation for percentage of Waste
        waste = caught - sold;
        perWaste = ((waste/caught)*100);
        
        //calculation for percentage of Population
        perType = ((caught/totalFish)*100);
    }
    
    //getters
    public int getPerWaste() {
        return perWaste;
    }

    public double getPerType() {
        return perType;
    }
    
    
}
